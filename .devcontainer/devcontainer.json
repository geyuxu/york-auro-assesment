// Use this devcontainer.json to develop within a standard Docker environment,
// with VNC providing the GUI support.
// It uses the prebuilt image from the GitHub Container Registry,
// so does not require a Dockerfile.
{
  "name": "auro-vnc",
  "image": "ghcr.io/uoy-robostar/ros2-tb3/auro-dev:latest",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE},target=/home/ubuntu/homedir,type=bind"
  ],
  "remoteUser": "ubuntu",
  "portsAttributes": {
      "6080": {
          "label": "Desktop"
      }
  },
  "postStartCommand": "touch /workspaces/.bash_history && ln -sf /workspaces/.bash_history /home/ubuntu/.bash_history ; /workspaces/${localWorkspaceFolderBasename}/.devcontainer/gitconfig.sh",
  "remoteEnv": {
    "USERNAME": "${localEnv:USERNAME}",
    "USERDNSDOMAIN": "${localEnv:USERDNSDOMAIN}"
  },
  "containerEnv": {
    "VNC_RESOLUTION": "1280x720x24"
  },
  "customizations": {
    "auro": {
      "apt": [],
      "pip": [],
      "scenarios": [
        {
          "name": "Scenario 1 - Random Seed 42",
          "description": "Single robot with random seed 42",
          "parameters": {
            "num_robots": 1,
            "random_seed": 42,
            "use_nav2": false,
            "headless": false
          }
        },
        {
          "name": "Scenario 2 - Random Seed 123",
          "description": "Single robot with random seed 123",
          "parameters": {
            "num_robots": 1,
            "random_seed": 123,
            "use_nav2": false,
            "headless": false
          }
        },
        {
          "name": "Scenario 3 - Random Seed 256",
          "description": "Single robot with random seed 256",
          "parameters": {
            "num_robots": 1,
            "random_seed": 256,
            "use_nav2": false,
            "headless": false
          }
        },
        {
          "name": "Scenario 4 - Random Seed 789",
          "description": "Single robot with random seed 789",
          "parameters": {
            "num_robots": 1,
            "random_seed": 789,
            "use_nav2": false,
            "headless": false
          }
        },
        {
          "name": "Scenario 5 - Random Seed 1024",
          "description": "Single robot with random seed 1024",
          "parameters": {
            "num_robots": 1,
            "random_seed": 1024,
            "use_nav2": false,
            "headless": false
          }
        }
      ]
    }
  }
}